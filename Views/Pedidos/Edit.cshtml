@model SullivanBurger.Models.Pedido

@{
  ViewData["Title"] = "Editar pedido";
  ViewData["PageType"] = "admin";
}


<div class="row usersAdmin m-5">
    <div class="col-md-4">
    <h1>Editar</h1>

    <h4>Pedido</h4>
    <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <select asp-for="Email" class="form-control" asp-items="ViewBag.Email"></select>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Management" class="btn btn-secondary" style="width:150px">
                  Volver atrás
                </a>
            </div>
        </form>
      
    </div>
</div>



