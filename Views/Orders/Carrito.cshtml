@model IEnumerable<Producto>

@{
    ViewData["Title"] = "Carrito";
    ViewData["PageType"] = "user";

}

<div class="usersAdmin m-5">
  <h2>Tu <b>Carrito</b></h2>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th>

        </th>
      </tr>
    </thead>
    <tbody>
      @foreach (var obj in Model)
      {
        <tr>
          <td>@obj.Nombre</td>
          <td>@obj.Descripcion</td>
          <td>@string.Format("{0:0.00}", obj.Precio)€</td>
          <td><img src="/img/products/@string.Join("", obj.Tipo,"s")/@obj.Imagen" width="128"></td>
          <td>
            <a title="Editar" asp-controller="Products" asp-action="Edit" asp-route-id="@obj.Nombre"><i class="fa fa-pencil"></i></a>
            <a title="Eliminar" asp-controller="Products" asp-action="Delete" asp-route-id="@obj.Nombre"><i class="fa fa-trash"></i></a>
          </td>
        </tr>
      }
    </tbody>
  </table>

</div>

