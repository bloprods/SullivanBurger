@model SullivanBurger.Models.Pedido

@{
  ViewData["Title"] = "Editar pedido";
  ViewData["PageType"] = "admin";
}


<div class="row usersAdmin m-5">
  <div class="col-md-4">
    <h1>Editar</h1>

    <h4>Pedido</h4>
    <hr />
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id" />
      <div class="form-group">
        <label asp-for="Fecha" class="control-label"></label>
        <input asp-for="Fecha" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control">
          <option>encamino</option>
          <option>entregado</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" class="form-control">
          <option>recoger</option>
          <option>domicilio</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <select asp-for="Email" class="form-control" asp-items="ViewBag.Email"></select>
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" style="width:150px"> Editar </button>
        <a asp-action="Management" class="btn btn-secondary" style="width:150px">
          Volver atrás
        </a>
      </div>
    </form>

  </div>
</div>




