@model Usuario

@{
  ViewData["Title"] = "Crear cuenta";
}

<div class="wrapper vertical-center">
  <div id="formContent">
    <!-- Icon -->
    <div class="fadeIn first">
      <img style="padding-left: 4%;" src="/img/person-plus-fill.svg" id="icon" alt="User Icon" />
    </div>

    <!-- SignUp Form -->
    <form method="post" class="form-inline justify-content-center">
      <input type="email" asp-for="Email" id="email" class="fadeIn first" name="email" placeholder="email" minlength="5" maxlength="60">
      <span asp-validation-for="Email" class="text-danger"></span>
      <input type="password" asp-for="Password" id="password" class="fadeIn first" name="password" placeholder="contraseña" minlength="8" maxlength="32">
      <span asp-validation-for="Password" class="text-danger"></span>

      <input type="text" asp-for="Nombre" id="nombre" class="fadeIn second" name="nombre" placeholder="nombre" minlength="1" maxlength="30">
      <span asp-validation-for="Nombre" class="text-danger"></span>

      <input type="text" asp-for="Apellidos" id="apellidos" class="fadeIn second" name="apellidos" placeholder="apellidos" minlength="1" maxlength="60">
      <span asp-validation-for="Apellidos" class="text-danger"></span>

      <input type="hidden" name="signup" value="true">
      <input type="submit" class="fadeIn fourth" value="Sign Up">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <p>
        ¿Ya tienes una cuenta?
        <a class="underlineHover" asp-area="" asp-controller="Users" asp-action="Login"> LogIn</a>
      </p>
    </div>
  </div>
</div>

