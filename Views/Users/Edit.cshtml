@model Usuario

@{
  ViewData["Title"] = "Editar usuario";
  ViewData["PageType"] = "admin";
}

<form method="post" asp-action="Edit" class="usersAdmin m-5">
  <div class="row pb-2">
    <h2 class="text-primary">Editar Usuario</h2>
    <hr />
  </div>
  <div class="mb-3">
    <label asp-for="Email"></label>
    <input type="email" asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Password"></label>
    <input type="text" asp-for="Password" class="form-control" />
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Nombre"></label>
    <input type="text" asp-for="Nombre" class="form-control" />
    <span asp-validation-for="Nombre" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Apellidos"></label>
    <input type="text"  asp-for="Apellidos" class="form-control" />
    <span asp-validation-for="Apellidos" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Telefono"></label>
    <input type="number" asp-for="Telefono" class="form-control" />
    <span asp-validation-for="Telefono" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Direccion"></label>
    <input type="text" asp-for="Direccion" class="form-control" />
    <span asp-validation-for="Direccion" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Rol"></label>
    <select asp-for="Rol" class="form-control" >
      <option>cliente</option>
      <option>repartidor</option>
      <option>admin</option>
    </select>
    <span asp-validation-for="Rol" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Puntos"></label>
    <input type="number" asp-for="Puntos" class="form-control" />
    <span asp-validation-for="Puntos" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary" style="width:150px"> Editar </button>
  <a asp-controller="Users" asp-action="Management" class="btn btn-secondary" style="width:150px">
    Volver atrás
  </a>
</form>

