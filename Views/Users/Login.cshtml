@model LoginViewModel

@{
  ViewData["Title"] = "Iniciar sesión";
}

<div class="wrapper vertical-center">
  <div id="formContent">
    <!-- Icon -->
    <div class="fadeIn first">
      <img src="/img/person-fill.svg" id="icon" alt="User Icon" />
    </div>

    <!-- Login Form -->
    <form method="post">
      <input type="email" asp-for="Email" id="email" class="fadeIn second" name="email" placeholder="email" minlength="5" maxlength="60">
      <input type="password" asp-for="Password" id="password" class="fadeIn third" name="password" placeholder="contraseña" minlength="8" maxlength="32">
      <input type="hidden" name="login" value="true">
      <input type="submit" class="fadeIn fourth" value="Log In">
      <p class="text-danger ml-4 mr-4">@ViewBag.LoginError</p>
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <p>
        ¿No tienes una cuenta?
        <a class="underlineHover" asp-area="" asp-controller="Users" asp-action="SignUp"> Sign Up</a>
      </p>
    </div>
  </div>
</div>
