@{
    ViewData["Title"] = "Sobre nosotros";
}

<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg_1 overlay">
    <h3>Sobre nosotros</h3>
</div>
<!-- bradcam_area_end -->
<!-- about_area_start -->
<div class="about_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-lg-6 col-md-6">
                <div class="about_thumb2">
                    <div class="img_1">
                        <img src="/img/about/1.png" alt="">
                    </div>
                    <div class="img_2">
                        <img src="/img/about/2.png" alt="">
                    </div>
                </div>
            </div>
            <div class="col-xl-5 col-lg-5 offset-lg-1 col-md-6">
                <div class="about_info">
                    <div class="section_title mb-20px">
                        <span>¿Qué ofrecemos?</span>
                        <h3>
                            Mejores Burgers <br>
                            de la zona
                        </h3>
                    </div>
                    <p>
                        Burgers 100% de ternera, ensaladas frescas hechas al momento, variedad de panes con alto
                        contenido en fibras, de cereales, sin gluten…
                    </p>
                    <p>Variedades vegetarianas y veganas.</p>
                    <p>
                        Todo pensado para que puedas disfrutar de nuestro "Fast Good" de manera saludable y
                        nutritiva.
                    </p>
                    <div class="img_thumb">
                        <img src="/img/firma.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- about_area_end -->
