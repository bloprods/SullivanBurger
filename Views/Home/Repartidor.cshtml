@model IEnumerable<Pedido>

@{
  ViewData["Title"] = "Panel de repartidor";
  ViewData["PageType"] = "user";
}

<section class="usersAdmin m-5 bigMargin">
  <h2>Pedidos <b>por entregar</b></h2>
    <div class="table-responsive">
    <table class="table table-striped table-hover align-items-center">
      <thead>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.Id)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Fecha)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Estado)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Tipo)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Usuario)
          </th>
          <th>Acción</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var obj in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => obj.Id)
            </td>
            <td>
              @Html.DisplayFor(modelItem => obj.Fecha)
            </td>
            <td>
              @if (obj.Estado == "En camino")
              {
                <span class="badge badge-primary">@Html.DisplayFor(modelItem => obj.Estado)</span>
              }
              else if (obj.Estado == "Entregado")
              {
                <span class="badge badge-success">@Html.DisplayFor(modelItem => obj.Estado)</span>

              }
            </td>
            <td>
              
              @Html.DisplayFor(modelItem => obj.Tipo)
            </td>
            <td>
              @Html.DisplayFor(modelItem => obj.Usuario.Email)
            </td>
            <td>
              <a title="Editar" asp-action="PedidoEntregado" asp-route-id="@obj.Id"><i class="fa fa-check-circle fa-2x text-success" aria-hidden="true"></i></a>
            </td>
          </tr>
        }
      </tbody>
    </table>

  </div>

</section>


