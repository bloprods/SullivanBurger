@model Distribuidor

@{
  ViewData["Title"] = "Crear distribuidor";
  ViewData["PageType"] = "admin";
}

<form method="post" asp-action="Create" class="usersAdmin m-5">
  <div class="row pb-2">
    <h2 class="text-primary">Crear Distribuidor</h2>
    <hr />
  </div>
  <div class="mb-3">
    <label asp-for="Nombre"></label>
    <input type="text" asp-for="Nombre" class="form-control" />
    <span asp-validation-for="Nombre" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Direccion"></label>
    <input type="text" asp-for="Direccion" class="form-control" />
    <span asp-validation-for="Direccion" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Telefono"></label>
    <input type="number" asp-for="Telefono" class="form-control" value="0"/>
    <span asp-validation-for="Telefono" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary" style="width:150px"> Crear </button>
  <a asp-controller="Providers" asp-action="Management" class="btn btn-secondary" style="width:150px">
    Volver atrás
  </a>
</form>

