@model IEnumerable<SullivanBurger.Models.Distribuidor>

@{
  ViewData["Title"] = "Index";
  ViewData["PageType"] = "admin";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table usersAdmin m-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Nombre">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Nombre">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Nombre">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
