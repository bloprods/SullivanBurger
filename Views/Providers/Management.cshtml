@model IEnumerable<Distribuidor>

@{
  ViewData["Title"] = "Gestión de distribuidores";
  ViewData["PageType"] = "admin";
}


<div class="usersAdmin m-5">
  <h2>Gestión de <b>Distribuidores</b></h2>
  <p>
    <a asp-action="Create" class="btn btn-primary">Nuevo distribuidor</a>
  </p>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var obj in Model)
      {
        <tr>
          <td>@obj.Nombre</td>
          <td>@obj.Direccion</td>
          <td>@obj.Telefono</td>
          <td>
            <a title="Editar" asp-controller="Providers" asp-action="Edit" asp-route-id="@obj.Nombre"><i class="fa fa-pencil"></i></a>
            <a title="Eliminar" asp-controller="Providers" asp-action="Delete" asp-route-id="@obj.Nombre"><i class="fa fa-trash"></i></a>
          </td>
        </tr>
      }
    </tbody>
  </table>

</div>

