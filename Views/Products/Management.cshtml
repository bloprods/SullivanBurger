@model IEnumerable<Producto>

@{
  ViewData["Title"] = "Gestión de productos";
  ViewData["PageType"] = "admin";
}


<div class="usersAdmin m-5">
  <h2>Gestión de <b>Productos</b></h2>
  <p>
    <a asp-action="Create" class="btn btn-primary">Nuevo producto</a>
  </p>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distribuidor)
        </th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var obj in Model)
      {
        <tr>
          <td>@obj.Nombre</td>
          <td>@obj.Descripcion</td>
          <td>@obj.Precio</td>
          <td>@obj.Imagen</td>
          <td>@obj.Tipo</td>
          <td>@obj.Stock</td>
          <td>@obj.DistribuidorId</td>
          <td>
            <a title="Editar" asp-controller="Products" asp-action="Edit" asp-route-id="@obj.Nombre"><i class="fa fa-pencil"></i></a>
            <a title="Eliminar" asp-controller="Products" asp-action="Delete" asp-route-id="@obj.Nombre"><i class="fa fa-trash"></i></a>
          </td>
        </tr>
      }
    </tbody>
  </table>

</div>

