@model IEnumerable<Usuario>

@{
  ViewData["Title"] = "Gestión de usuarios";
  ViewData["PageType"] = "admin";
}


<div class="usersAdmin m-5">
  <h2>User <b>Management</b></h2>
  <p>
    <a asp-action="Create" class="btn btn-primary">Nuevo usuario</a>
  </p>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Email</th>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Teléfono</th>
        <th>Dirección</th>
        <th>Rol</th>
        <th>Puntos</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var obj in Model)
      {
        <tr>
          <td>@obj.Email</td>
          <td>@obj.Nombre</td>
          <td>@obj.Apellidos</td>
          <td>@obj.Telefono</td>
          <td>@obj.Direccion</td>
          <td>@obj.Rol</td>
          <td>@obj.Puntos</td>
          <td>
            <a title="Editar" asp-controller="Users" asp-action="Edit" asp-route-email="@obj.Email"><i class="fa fa-pencil"></i></a>
            <a title="Eliminar" asp-controller="Users" asp-action="Delete" asp-route-email="@obj.Email"><i class="fa fa-trash"></i></a>
          </td>
        </tr>
      }
    </tbody>
  </table>
  <span class="text-info">@TempData["Management"]</span>

</div>

